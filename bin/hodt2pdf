#h: Usage: $0 ODT PDF
#h:
#h: Transform an Open Office ODT file to PDF using `soffice` command.
hodt2pdf() {
    local odt="$1" pdf="$2"
    if test ! -n "${odt}";then
        echo "${SCRNAME}: error: Please specify an odt file." >&2
        return 1
    elif test ! -f "${odt}";then
        echo "${SCRNAME}: error: File ${odt} does not exist." >&2
        return 1
    fi
    if test ! -n "${pdf}";then
        echo "${SCRNAME}: error: Please specify a pdf file." >&2
        return 1
    fi
    if test -d "${pdf}";then
        local dir="${pdf}"
    else
        local dir="/tmp/hodt2pdf.d"
    fi
    mkdir -p "${dir}"
    local tfile="${dir}"/"`basename ${odt} .odt`.pdf"
    soffice --headless        \
            --convert-to pdf  \
            --outdir "${dir}" \
            "${odt}"          \
            2>&1 >/dev/null   \
        | sed '/warning/d' >&2
    sleep 1
    if test ! -d "${pdf}";then
        mv "${tfile}" "${pdf}"
    fi
}

## -----------------------------------------------------------------------------

## -----------------------------------------------------------------------------
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"hodt2pdf";then
    if test -n "$1";then
        hodt2pdf "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
